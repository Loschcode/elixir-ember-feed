<!-- If want to use mixins, no need to add classes -->
<div class="container">

  <div class="row row-full">

    <!-- Side Header -->
    <div class="gr-3 gr-12@mobile gr-12@tablet header">

      <!-- Author -->
      <div class="header__author">
        <h1>Laurent Schaffner</h1>
      </div>

      <!-- Summary -->
      <div class="header__summary">
        Code &amp; Stuff
      </div>

      <!-- Links -->
      <div class="header__links">
        Link 1
        Link 2
      </div>

    </div>

    <!-- Content -->
    <div class="gr-9">

      {{#each model.links as |link|}}

      <div class="row">
        <h3><a href="{{link.url}}">{{link.title}}</a></h3>
      </div>

      {{/each}}

    </div>
  </div>
</div>
